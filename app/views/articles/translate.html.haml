.page-header
  %h3
    管理翻译
    %small= @article.title

.panel.panel-default
  .panel-heading
    .panel-title 相关信息
  .panel-body
    %dl.dl-horizontal
      = render 'general_info'

.panel.panel-default
  .panel-heading
    .panel-title 原文
  .panel-body
    = GitHub::Markdown.render(@article.original).html_safe
  .panel-footer
    = preserve formatter.format(lexer.lex(@article.original)).html_safe
